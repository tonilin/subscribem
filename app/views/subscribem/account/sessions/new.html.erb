<h2>Sign in</h2>

<%= form_for @user, :url => sessions_url do |f| %>
  <p>
    <%= f.label :email %><br> <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= link_to "New User?", user_sign_up_url %>
    <%= f.submit "Sign in" %>
  </p>
<% end %>
